<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/primaryColor"
    android:layout_margin="@dimen/padding_common_min"
    app:cardCornerRadius="@dimen/radius_cards"
    android:elevation="@dimen/elevation_cards"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivPhotoAnime"
            android:layout_width="0dp"
            android:layout_height="@dimen/photo_anime_size_card"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tvNameAnime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_common_min"
            android:text="Naruto shippuden"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceHeadline6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivPhotoAnime"
            />

        <TextView
            android:id="@+id/tvSeasonAnime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_common_min"
            tools:text="Temporada 1"
            android:textColor="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceBody2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvNameAnime"
            />

        <TextView
            android:id="@+id/tvDescriptionAnime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_common_min"
            android:textAppearance="?attr/textAppearanceSubtitle2"
            tools:text="aasdasdasdaadsfadfadfaasdfadsfadsfasdfasdfasdfadsfasdfasdfasdfasdfasdfasdfasdfasdfasdfasfasdfadf"
            android:textColor="@color/white"
            android:layout_marginHorizontal="@dimen/padding_common_min"
            android:maxLines="3"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSeasonAnime"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <View
            android:layout_width="@dimen/size_border_tempority_anime"
            android:layout_height="@dimen/size_border_tempority_anime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/black"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>